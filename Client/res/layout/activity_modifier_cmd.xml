<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"

    android:layout_gravity="center">

    <TableLayout
        android:id="@+id/activity_etat_cmd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="MODIFIER COMMANDE"
            android:textColor="@android:color/background_light" />

        <TableRow>
            <EditText
                android:id="@+id/adresse"
                android:hint="Adresse de livraison"
                android:width="250dp"
                />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/tel"
                android:inputType="phone"
                android:hint="Téléphone"
                android:width="250dp"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:text="Modifier le Livreur :"
                android:textSize="18dp"
                />

        </TableRow>
    </TableLayout>
    <Spinner
        android:id="@+id/myspinner"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/retourner"
            android:background="@null"
            android:id="@+id/btn_back"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/modifier"
            android:background="@null"
            android:id="@+id/btn_mod"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/delet"
            android:background="@null"
            android:id="@+id/btn_del"/>

    </LinearLayout>


</LinearLayout>
